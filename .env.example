# OpenClaw Google Cloud Deployment Configuration
# GCP infrastructure vars only. OpenClaw secrets are in .openclaw/.env

# =============================================================================
# GCP Project Configuration
# =============================================================================

# Your Google Cloud project ID
export GCP_PROJECT_ID=your-gcp-project-id

# GCP region for resources (choose nearest to you)
export GCP_REGION=us-east1

# GCP zone within the region
export GCP_ZONE=us-east1-b

# =============================================================================
# Docker Registry Configuration
# =============================================================================

# Artifact Registry repository name for Docker images
export GCP_REPO_NAME=openclaw-repo

# Docker image configuration
export OPENCLAW_VERSION=latest
export IMAGE_NAME_CLOUD=openclaw-cloud

# =============================================================================
# VM Configuration
# =============================================================================

# VM instance name
export VM_NAME=openclaw-gateway

# Machine type: e2-medium (2 vCPU, 4GB RAM, ~$24/month)
export MACHINE_TYPE=e2-medium

# Boot disk size in GB (for OS + Docker images)
export BOOT_DISK_SIZE_GB=30

# User on VM for running OpenClaw (your OS Login username, typically email with _ replacing special chars)
export GCP_VM_USER=your_email_com

# =============================================================================
# Docker Resource Limits
# =============================================================================

# Memory limit (leave ~1GB for OS)
export DOCKER_MEMORY_LIMIT=3g

# Memory soft limit (can burst to limit if available)
export DOCKER_MEMORY_RESERVATION=2g

# CPU limit (leave ~0.5 CPU for OS)
export DOCKER_CPU_LIMIT=1.5

# =============================================================================
# Advanced Configuration (Optional)
# =============================================================================

# Network tags for firewall rules
export NETWORK_TAGS=openclaw-gateway

# Enable OS Login (recommended for production)
export ENABLE_OS_LOGIN=true
