# OpenClaw Terraform Configuration Example
# Copy this file to terraform.tfvars and fill in your values

# REQUIRED: Your GCP project ID
project_id = "your-project-id"

# REQUIRED: OpenClaw gateway authentication token
# Generate with: openssl rand -hex 32
openclaw_gateway_token = "your-secure-token-here"

# OPTIONAL: Override defaults below

# GCP region and zone (use us-east1, us-central1, or us-west1 for free tier)
# region = "us-east1"
# zone   = "us-east1-b"

# Instance configuration
# IMPORTANT: e2-micro (1GB RAM) is too small for openclaw installation
# Recommended: e2-small (2GB RAM, ~$13/month)
# instance_name = "openclaw-gateway"
# machine_type  = "e2-small"

# Disk sizes in GB (30GB total included in free tier)
# boot_disk_size_gb = 10
# data_disk_size_gb = 20

# OpenClaw and gog versions
# openclaw_version = "2026.1.30"
# gog_version      = "0.9.0"

# Gateway configuration
# openclaw_gateway_port = 18789
# openclaw_gateway_bind = "loopback"  # loopback, lan, or all

# Resource labels
# labels = {
#   environment = "production"
#   managed_by  = "terraform"
#   application = "openclaw"
# }

# Enable OS Login for SSH
# enable_os_login = true
